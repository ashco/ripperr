  "scripts": {
    "dev": "cd src/app && yarn dev",
    "install": "yarn install-next && yarn install-firebase",
    "install-next": "cd src/app && yarn install",
    "install-firebase": "cd src/functions && yarn install",
    "build": "yarn build-next && yarn build-firebase",
    "build-next": "cd src/app && yarn build",
    "build-firebase": "cd src/functions && yarn build",
    "serve": "yarn build && firebase serve",
    "shell": "yarn build && firebase functions:shell",
    "deploy": "firebase deploy",
    "deploy-fns": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "firebase": "^7.6.1",
    "next": "^9.1.6",
