{
  "name": "ripperr",
  "version": "1.0.0",
  "author": "AshCo (https://ashco.io)",
  "license": "MIT",
  "scripts": {
    "dev": "cd src/app && next -p 9999",
    "build": "yarn build-next && yarn build-firebase",
    "build-next": "cd src/app && next build",
    "build-firebase": "cd src/functions && yarn build",
    "start": "cd src/app && next start",
    "serve": "yarn build && firebase serve",
    "shell": "yarn build && firebase functions:shell",
    "deploy": "firebase deploy",
    "deploy-fns": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "check-types": "tsc --build ./src/app/tsconfig.json",
    "lint": "jest --config test/jest.lint.js",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|ts|tsx)\"",
    "format": "yarn prettier -- --write",
    "check-format": "yarn prettier -- --list-different",
    "validate": "npm-run-all --parallel check-types check-format test:coverage build",
    "install:all": "yarn install && cd src/functions && yarn install",
    "setup": "yarn install:all && yarn validate",
    "test": "is-ci \"test:coverage\" \"test:watch\"",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch"
  },
  "jest-runner-eslint": {
    "cliOptions": {
      "ignorePath": "./.gitignore"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check-types && lint-staged && npm run build"
    }
  },
  "lint-staged": {
    "**/*.+(js|jsx|ts|tsx|json|css|html|md)": [
      "prettier --write",
      "jest --findRelatedTests"
    ]
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "firebase": "^7.6.1",
    "formik": "^2.1.1",
    "next": "^9.1.6",
    "next-images": "^1.3.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-hook-form": "^5.6.1",
    "react-select": "^3.1.0",
    "react-sortable-hoc": "^1.11.0",
    "react-textarea-autosize": "^7.1.2",
    "styled-components": "^4.4.1",
    "yup": "^0.28.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.7.0",
    "@testing-library/react": "^10.0.4",
    "@types/jest": "^24.0.25",
    "@types/node": "^12.12.21",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-select": "^3.0.12",
    "@types/react-test-renderer": "^16.9.1",
    "@types/react-textarea-autosize": "^4.3.5",
    "@types/styled-components": "^4.4.1",
    "@types/yup": "^0.26.27",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-import-resolver-jest": "^3.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "firebase-admin": "^8.12.0",
    "husky": "^4.2.5",
    "is-ci-cli": "^2.0.0",
    "jest": "^26.0.1",
    "jest-runner-eslint": "^0.8.0",
    "jest-styled-components": "^7.0.2",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-typeahead": "^0.6.0",
    "lint-staged": "^10.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "react-test-renderer": "^16.12.0",
    "ts-jest": "^25.5.1",
    "typescript": "^3.7.4"
  }
}
